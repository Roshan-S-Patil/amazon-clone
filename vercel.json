{
  "version": 2,
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/client/App.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/old-route",
      "destination": "/new-route"
    },
    {
      "source": "/products/(.*)",
      "destination": "/product?id=$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}