{
  "version": 2,
  "rewrites": [
    {
      "source":"/(.*)",
      "destination":"/client/build/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/server/index.js"
    }
  ], "routes": [
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    }
  ]
}