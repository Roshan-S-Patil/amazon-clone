{
    "version": 2,
    "builds": [
      {
        "src": "/**/*.js",
        "use": "node"
      },
      {
        "src": "client/package.json",
        "use": "react-scripts build",
        "config": {
          "distDir": "client/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
  }